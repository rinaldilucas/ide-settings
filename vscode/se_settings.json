{
	// Editor Formatting and Code Style
	"editor.formatOnSave": false,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixAll": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	"editor.detectIndentation": false,
	"editor.foldingImportsByDefault": false,
	"editor.fontFamily": "FiraCode Nerd Font",
	"editor.fontLigatures": "'zero', 'cv27', 'cv30', 'cv31', 'ss03', 'ss04', 'ss05'",
	"editor.fontSize": 13,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.rulers": [
		150
	],

	// Default Formatters
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[php]": {
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
  		"editor.tabSize": 4,
    	"editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
	},

	// Search and visibility
	"search.exclude": {
		"**/dist": true,
		"**/node_modules": true,
		"**/web.config": true,
		"package-lock.json": true,
		"**/cat.txt": true,
		"**/no_test.txt": true
	},
	"files.exclude": {
		"**/.git": true,
		"**/bin": true,
		"node_modules": true,
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true
	},

	// Prettier Configuration
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.printWidth": 150,
	"prettier.bracketSpacing": false,
	"prettier.arrowParens": "always",
	"prettier.embeddedLanguageFormatting": "auto",
	"prettier.endOfLine": "auto",
	"prettier.htmlWhitespaceSensitivity": "ignore",
	"prettier.proseWrap": "preserve",
	"prettier.quoteProps": "consistent",
	"prettier.trailingComma": "none",
	"prettier.singleQuote": false,
	"prettier.jsxSingleQuote": false,
	"prettier.bracketSameLine": true,

	// ESLint Configuration
	"eslint.options": {
		"overrideConfig": {
			"ignorePatterns": [
				"local.d.ts"
			],
			"rules": {
				"import/order": [
					"error",
					{
						"groups": [
							"external",
							"internal",
							[
								"parent",
								"sibling"
							],
							"index"
						],
						"pathGroups": [
							{
								"pattern": "{reactor2,reactorCmps}/**",
								"group": "internal",
								"position": "before"
							},
							{
								"pattern": "./style*.{css,scss}",
								"group": "index",
								"position": "after"
							}
						],
						"pathGroupsExcludedImportTypes": [
							"builtin"
						],
						"newlines-between": "always",
						"alphabetize": {
							"order": "asc",
							"caseInsensitive": true
						}
					}
				],
				"newline-after-var": 0,
				"import/no-extraneous-dependencies": "off",
				"no-mixed-imports": 0,
				"no-reactor2": 0,
				"no-setoken": 0,
				"no-window": 0,
				"jsx-quotes": [
					"error",
					"prefer-double"
				],
				"quotes": [
					"error",
					"double"
				],
				"object-curly-spacing": [
					"error",
					"always"
				],
				"no-multiple-empty-lines": [
					"error",
					{
						"max": 1,
						"maxEOF": 1,
						"maxBOF": 0
					}
				]
			}
		}
	},
	"eslint.enable": true,
	"eslint.format.enable": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],

	// Editor Interaction and Assistance
	"editor.hover.enabled": true,
	"editor.inlineSuggest.enabled": true,
	"editor.linkedEditing": true,
	"editor.occurrencesHighlight": "off",
	"editor.parameterHints.enabled": true,
	"editor.suggestSelection": "first",

	// Editor Visuals and Navigation
	"editor.renderLineHighlight": "gutter",
	"editor.stickyScroll.enabled": false,

	// File Explorer and File Handling
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	"files.associations": {
		"*.inc": "php",
		"*.mcss": "scss"
	},
	"files.autoGuessEncoding": false,
	"files.eol": "\n",
	"files.insertFinalNewline": false,
	"files.trimTrailingWhitespace": true,

	// Git Integration
	"git.autofetch": true,
	"git.autoRepositoryDetection": false,
	"git.decorations.enabled": false,
	"git.detectSubmodules": false,
	"git.enabled": true,
	"git.enableSmartCommit": false,
	"git.ignoredRepositories": [
		"ui"
	],
	"git.ignoreLimitWarning": true,
	"git.ignoreRebaseWarning": true,
	"git.ignoreSubmodules": true,
	"git.ignoreWindowsGit27Warning": true,
	"git.openRepositoryInParentFolders": "always",
	"gitlens.defaultDateFormat": "D/MM/YYYY, HH:m",
	"gitlens.defaultDateShortFormat": "D/MM/YY",
	"gitlens.defaultTimeFormat": "HH:m",
	"gitlens.views.stashes.files.layout": "list",
	"gitlens.codeLens.scopes": ["document"],
	"git.confirmSync": false,
	"git.suggestSmartCommit": false,

	// Language-Specific Settings
	"javascript.suggest.enabled": true,
	"javascript.suggest.autoImports": true,
	"javascript.suggest.completeJSDocs": true,
	"javascript.suggest.paths": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.preferences.importModuleSpecifier": "relative",
	"typescript.preferences.importModuleSpecifier": "relative",

	// PHPUnit Testing
	"phpunit.command": "docker exec -t -e XDEBUG_MODE=debug -w /usr/local/se/web/ se-baseclass ${php} ${phpargs} ${phpunit} ${phpunitargs}",
	"phpunit.php": "php",
	"phpunit.phpunit": "/tmp/phpunit.phar",
	"phpunit.args": [
		"tests/include/exp/analysistools/",
		"--no-coverage"
	],
	"phpunit.paths": {
		"${workspaceFolder}": "/usr/local/se/web/tests/include/exp/analysistools/"
	},

	// Terminal and Environment
	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell"
		},
		"Command Prompt": {
			"path": [
				"${env:windir}\\Sysnative\\cmd.exe",
				"${env:windir}\\System32\\cmd.exe"
			],
			"args": [],
			"icon": "terminal-cmd"
		},
		"Git Bash": {
			"source": "Git Bash"
		},
		"Ubuntu (WSL)": {
			"path": "C:\\WINDOWS\\System32\\wsl.exe",
			"args": [
				"-d",
				"Ubuntu"
			]
		}
	},
	"terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
	"terminal.integrated.env.windows": {},
	"terminal.integrated.persistentSessionReviveProcess": "never",
	"termPreview.absolutePathToTermsRoot": "/root/code/SoftExpertExcellenceSuiteV3/System/web/include/language/LC_MESSAGES",
	"termPreview.file": "{{LANGUAGE}}.utf-8.po",
	"termPreview.languages": [
		"pt-br",
		"en-us"
	],

	// Workbench and UI Customization
	"material-icon-theme.activeIconPack": "angular_ngrx",
	"window.zoomPerWindow": false,
	"workbench.colorCustomizations": {
		"statusBar.debuggingBackground": "#263238",
		"statusBar.noFolderBackground": "#212121"
	},
	"workbench.colorTheme": "Default Dark Modern",
	"workbench.editor.enablePreview": false,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.startupEditor": "newUntitledFile",

	// General Editor Behavior
	"chat.commandCenter.enabled": false,
	"debug.onTaskErrors": "abort",
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.renderSideBySide": true,
	"editor.accessibilitySupport": "off",
	"security.workspace.trust.untrustedFiles": "open",
	"security.allowedUNCHosts": [
		"wsl.localhost"
	],
	"supermaven.allowGitignore": true,
	"supermaven.enable": {
		"*": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"codeium.enableConfig": {
		"*": true,
		"plaintext": true
	},
	"remote.autoForwardPortsSource": "hybrid",
	"workbench.layoutControl.enabled": false,
	"window.zoomLevel": 1
}
